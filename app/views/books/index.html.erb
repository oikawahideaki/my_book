<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>表紙</th>
      <th>タイトル</th>
      <th>著書</th>
      <th>価格</th>
      <th>出版社</th>
      <th>発売日</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.img %>" alt="<%= book.name %>の表紙画像" class="img-responsive"></td>
        <td><%= book.name %></td>
        <td><%= book.writer %></td>
        <td><%= number_to_currency(book.price, unit: "¥",precision: 0) %></td>
        <td><%= book.company %></td>
        <td><%= book.release .strftime('%Y/%m/%d') %></td>
        <td><%= book.code %></td>
        <td><%= link_to '閲覧', book,class:"btn btn-success btn-xs"%></td>
        <td><%= link_to '編集', edit_book_path(book),class:"btn btn-info btn-xs"%></td>
        <td><%= link_to '削除', book,method: :delete, data: { confirm: 'Are you sure?'},class:"btn btn-warning btn-xs"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/books/new">新しい書籍の登録</a>
<%= link_to 'New Book', new_book_path, class: "btn btn-primary btn-lg_" %>
</div>
